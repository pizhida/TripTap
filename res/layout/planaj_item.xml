<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="70dp"
	android:descendantFocusability="blocksDescendants"


    android:orientation="vertical" >

    <ImageView
        android:id="@+id/planaj_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
         android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip"
         android:layout_marginRight="2dip"
        android:layout_marginLeft="2dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/phuket1" />

    <CheckBox
        android:id="@+id/planaj_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/planaj_rate"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/planaj_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/planaj_rate"
        android:layout_alignParentTop="true"
        
         android:layout_marginRight="2dip"
        android:layout_marginLeft="2dip"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/planaj_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/planaj_name"
        android:layout_toRightOf="@+id/planaj_image"
         android:layout_marginRight="2dip"
        android:layout_marginLeft="2dip"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
